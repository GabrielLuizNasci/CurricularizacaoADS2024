<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CurricularizacaoADS2024</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CurricularizacaoADS2024.styles.css" asp-append-version="true" />
    <style>
        /* Navbar Styling */
        .navbar {
            background: linear-gradient(to right, #0062E6, #33AEFF);
        }

        .navbar-nav .nav-item .nav-link {
            background-color: #007BFF; /* Cor azul */
            color: white !important;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease; /* Animação suave */
        }

            /* Hover effect */
            .navbar-nav .nav-item .nav-link:hover {
                background-color: #0056b3; /* Azul mais escuro ao passar o mouse */
                color: #FFD700 !important;
                transform: scale(1.05); /* Efeito de ampliação */
            }

        .container {
            color: black; /* Define a cor do texto */
            text-align: center; /* Centraliza o texto horizontalmente */
            margin: 0 auto; /* Certifica que o container está centralizado */
        }


        footer {
            background-color: #123456; /* Substitua #123456 pela cor desejada */
            color: #fff; /* Cor do texto */
            border-top: 2px solid #f8f9fa;
        }

            footer .container {
                font-size: 1rem;
            }



        /* Section Highlight */
        .highlight-text {
            background-color: #f8f9fa;
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            font-size: 1.25rem;
            font-weight: bold;
            color: #333;
        }

        /* Cards */
        .card {
            border-radius: 10px;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 2rem;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Alunos" asp-action="Index">Alunos</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Matriculas" asp-action="Index">Matricula</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Responsavel" asp-action="Index">Responsavel</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Visitas" asp-action="Index">Visitas</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Cursos" asp-action="Index">Cursos</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Turmas" asp-action="Index">Turmas</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Atividades" asp-action="Index">Atividade</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2" asp-area="" asp-controller="Consultas" asp-action="FiltrarVisita">Filtrar Visita</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2" asp-area="" asp-controller="Consultas" asp-action="FiltrarMatricula">Filtrar Matricula</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Parceiros" asp-action="Index">Parceiros</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Professores" asp-action="Index">Professores</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CurricularizacaoADS2024
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
