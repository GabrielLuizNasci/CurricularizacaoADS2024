<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CurricularizacaoADS2024</title>

    <!-- CSS Links -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CurricularizacaoADS2024.styles.css" asp-append-version="true" />

    <style>
        /* Navbar Styling */
        .navbar {
            background: linear-gradient(to right, #0062E6, #33AEFF);
        }

        .navbar-toggler {
            border: none; /* Remove border */
            background-color: #ffffff; /* Botão branco */
            margin-left: auto;
            color: #007BFF; /* Ícone azul */
        }

        .navbar-toggler-icon {
            background-color: #007BFF; /* Ajuste a cor do ícone para melhor visibilidade */
        }

        .navbar-nav .nav-item .nav-link {
            background-color: #007BFF;
            color: white !important;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #0056b3;
                color: #FFD700 !important;
                transform: scale(1.05);
            }

        .container {
            color: black;
            text-align: center;
            margin: 0 auto;
        }

        footer {
            background-color: #123456;
            color: #fff;
            border-top: 2px solid #f8f9fa;
        }

            footer .container {
                font-size: 1rem;
            }
        /* Section Highlight */
        .highlight-text {
            background-color: #f8f9fa;
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            font-size: 1.25rem;
            font-weight: bold;
            color: #333;
        }
        /* Cards */
        .card {
            border-radius: 10px;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 2rem;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <header>
        
        <nav class="navbar navbar-dark bg-dark fixed-top">

            <div class="container-fluid">

                <div class="nav-item">
                    <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> Home
                    </a>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel"></h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Alunos" asp-action="Index">Alunos</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Matriculas" asp-action="Index">Matricula</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Responsavel" asp-action="Index">Responsavel</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Visitas" asp-action="Index">Visitas</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Cursos" asp-action="Index">Cursos</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Turmas" asp-action="Index">Turmas</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Atividades" asp-action="Index">Atividade</a>
                            </li>                           

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Parceiros" asp-action="Index">Parceiros</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-light text-dark nav-link me-2 mb-2 mb-lg-0" asp-area="" asp-controller="Professor" asp-action="Index">Professores</a>
                            </li>





                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Filtrar
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li class="nav-item">
                                        <a class="btn btn-light text-dark nav-link me-2" asp-area="" asp-controller="Consultas" asp-action="FiltrarVisita">Filtrar Visita</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="btn btn-light text-dark nav-link me-2" asp-area="" asp-controller="Consultas" asp-action="FiltrarMatricula">Filtrar Matricula</a>
                                    </li>
                                    
                                </ul>
                            </li>
                        </ul>

                        

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CurricularizacaoADS2024
        </div>
    </footer>

    <!-- Script Links -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
