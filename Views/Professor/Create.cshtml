@model CurricularizacaoADS2024.Models.Professor

@{
    ViewData["Title"] = "Adicionar Professor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Adicionar Professor</h1>

<div class="card mx-auto shadow-sm" style="max-width: 700px;">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-chalkboard-teacher"></i> Cadastro de Professor</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">
                    <i class="fas fa-user"></i> Nome
                </label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do professor" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefone" class="form-label">
                    <i class="fas fa-phone-alt"></i> Telefone
                </label>
                <input asp-for="Telefone" class="form-control" placeholder="(XX) XXXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope"></i> Email
                </label>
                <input asp-for="Email" class="form-control" placeholder="Digite o email do professor" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="parceiroID" class="form-label">
                    <i class="fas fa-handshake"></i> Parceiro
                </label>
                <select asp-for="parceiroID" class="form-select" asp-items="ViewBag.parceiroID">
                    <option value="">Selecione um parceiro</option>
                </select>
                <span asp-validation-for="parceiroID" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-danger">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
