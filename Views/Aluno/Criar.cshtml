@{
    ViewData["Title"] = "Adicionar Alunos";
}
<div class="text-center">

<h1 class="display-4">Cadastrar Aluno</h1>

</div>

<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" class="form-control" id="nome" aria-describedby="nome" placeholder="Nome do Aluno">
        <small id="nome" class="form-text text-muted">Digite aqui o nome do aluno.</small>
    </div>
    <div class="form-group">
        <label for="nascimento">Data de Nascimento</label>
        <input type="date" class="form-control" id="nascimento" placeholder="Data de Nascimento">
    </div>
    <div class="form-group">
        <label for="endereco">Endereco</label>
        <input type="text" class="form-control" id="endereco" placeholder="Endereço">
    </div>
    <div class="form-group">
        <label for="cpd">CPF</label>
        <input type="number" class="form-control" id="cpf" placeholder="CPF">
    </div>
    <div class="form-group">
        <label for="RG">RG</label>
        <input type="number" class="form-control" id="rg" placeholder="RG">
    </div>
    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="text" class="form-control" id="telefone" placeholder="Telefone">
    </div>
    <div class="form-group">
        <label for="sexo">Sexo</label>
        <input type="sexo" class="form-control" id="sexo" placeholder="Sexo">
    </div>
    <button type="button" class="btn btn-success btn-lg btn-block">Salvar</button>
    <a class="btn btn-danger btn-lg btn-block" asp-controller="Aluno" asp-action="Index" role="button">Voltar</a>
</form>