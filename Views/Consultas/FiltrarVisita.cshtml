@{
}

<div class="container py-5" style="min-height: 100vh;">
    <h1 class="text-center mb-4 display-6 text-primary">Filtrar Visitas</h1>

    <p class="text-center text-muted mb-4" style="font-size: 1.2rem; font-weight: bold; color: #495057; background-color: #f8f9fa; padding: 10px 20px; border-radius: 5px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        Insira o ID ou o Nome do Responsável para encontrar a visita desejada
    </p>

    <hr class="mb-5" />

    <div class="d-flex justify-content-center align-items-center" style="height: 70vh;">
        <div class="col-md-8 col-lg-5">
            <form asp-action="ResFiltrarVisita" class="p-4 border rounded shadow bg-white">
                <div class="form-group mb-4">
                    <label for="id" class="form-label fw-semibold text-secondary">Informe o ID da Visita</label>
                    <input type="text" id="id" name="id" class="form-control border-primary" placeholder="Digite o ID aqui" />
                </div>

                <div class="form-group mb-4">
                    <label for="nome" class="form-label fw-semibold text-secondary">Informe o Nome do Responsável</label>
                    <input type="text" id="nome" name="nome" class="form-control border-primary" placeholder="Digite o nome aqui" />
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Filtrar" class="btn btn-primary btn-lg px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
