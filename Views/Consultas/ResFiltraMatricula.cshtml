@model IEnumerable<CurricularizacaoADS2024.Models.Matricula>

@{
    ViewData["Title"] = "ResFiltraMatricula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #007bff;
            margin-top: 50px;
            text-align: center;
            font-weight: 600;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .description {
            font-size: 1.2rem;
            font-weight: bold;
            color: #495057;
            background-color: #f8f9fa;
            padding: 10px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 40px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: #ffffff;
        }

        .table td {
            color: #495057;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .table a:hover {
            text-decoration: underline;
        }

        .btn-primary {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
            font-size: 1.1rem;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        .pagination a {
            padding: 8px 12px;
            margin: 0 5px;
            text-decoration: none;
            color: #007bff;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .pagination a:hover {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container py-5" style="min-height: 100vh;">
        <h1 class="display-6">Filtro de Matrícula</h1>

        <p class="description text-center">
            Utilize o filtro para encontrar as matrículas desejadas.
        </p>

        <div class="text-center mb-4">
            <a asp-action="FiltrarMatricula" class="btn btn-primary">Filtrar Matrículas</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataMatricula)</th>
                    <th>@Html.DisplayNameFor(model => model.curso)</th>
                    <th>@Html.DisplayNameFor(model => model.aluno)</th>
                    <th>@Html.DisplayNameFor(model => model.RA)</th>
                    <th>@Html.DisplayNameFor(model => model.turma)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DataMatricula)</td>
                        <td>@Html.DisplayFor(modelItem => item.curso.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.aluno.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.RA)</td>
                        <td>@Html.DisplayFor(modelItem => item.turma.descricao)</td>
                        <td>
                            <a asp-action="Detalhes" asp-route-id="@item.Id">Ver Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            <!-- Adicionar paginação aqui, caso necessário -->
        </div>
    </div>

</body>
</html>
